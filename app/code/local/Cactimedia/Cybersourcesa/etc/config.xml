<config>
    <modules>
        <Cactimedia_Cybersourcesa>
            <version>0.1.0</version>
        </Cactimedia_Cybersourcesa>
    </modules>
    <global>
        <models>
            <cybersourcesa>
                <class>Cactimedia_Cybersourcesa_Model</class>
            </cybersourcesa>
        </models>
        <resources>
			<cybersourcesa_setup>
				<setup>
					<module>Cactimedia_Cybersourcesa</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</cybersourcesa_setup>
			<cybersourcesa_write>
				<connection>
					<use>core_write</use>
				</connection>
			</cybersourcesa_write>
			<cybersourcesa_read>
				<connection>
					<use>core_read</use>
				</connection>
			</cybersourcesa_read>
        </resources>
        <blocks>
            <cybersourcesa>
                <class>Cactimedia_Cybersourcesa_Block</class>
            </cybersourcesa>
        </blocks>
        <helpers>
            <cybersourcesa>
                <class>Cactimedia_Cybersourcesa_Helper</class>
            </cybersourcesa>
        </helpers>
    </global>
    <frontend>
        <routers>
            <cybersourcesa>
                <use>standard</use>
                <args>
                    <module>Cactimedia_Cybersourcesa</module>
                    <frontName>cybersourcesa</frontName>
                </args>
            </cybersourcesa>
        </routers>
        <layout>
            <updates>
                <cybersourcesa>
                    <file>cybersourcesa.xml</file>
                </cybersourcesa>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cactimediainfo>
											<title>Cactimedia - All</title>
										</cactimediainfo>
										<paymentinfo>
											<title>CyberSource Secure Acceptance WM Info</title>
										</paymentinfo>
										<cybersourcesa>
											<title>CyberSource Secure Acceptance WM Area</title>
										</cybersourcesa>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <payment>
            <cybersourcesa>
                <active>0</active>
				<enable_log>1</enable_log>
               	<model>cybersourcesa/cybersourcesa</model>
               	<title>CyberSource Secure Acceptance WM</title>
                <mode>0</mode>
				<order_status>pending</order_status>
                <debug_flag>1</debug_flag>
				<allowspecific>0</allowspecific>
				<sort_order>1</sort_order>
            </cybersourcesa>
        </payment>
    </default>
</config>